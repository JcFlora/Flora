<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_bg_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/app_page_padding">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:background="@drawable/shape_bg_ripple1"
            android:text="水波纹反馈(xml实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ripple1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:text="水波纹反馈(代码实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:background="@drawable/shape_bg_ripple2"
            android:text="圆角水波纹反馈(xml实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ripple2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:text="圆角水波纹反馈(代码实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:background="@drawable/shape_bg_ripple3"
            android:text="渐变水波纹反馈(xml实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ripple3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:text="渐变水波纹反馈(代码实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:background="@drawable/shape_bg_ripple4"
            android:text="圆角渐变水波纹反馈(xml实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ripple4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_accent_button_height"
            android:text="圆角渐变水波纹反馈(代码实现)"
            android:textColor="@color/app_color_text_white"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_ripple5"
            android:clickable="true"
            android:text="无边界水波纹反馈(xml实现)"
            android:textColor="@color/app_color_text_gray"
            android:textSize="@dimen/app_text_size_18dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ripple5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_ripple5"
            android:clickable="true"
            android:text="无边界水波纹反馈(代码实现)"
            android:textColor="@color/app_color_text_gray"
            android:textSize="@dimen/app_text_size_18dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>