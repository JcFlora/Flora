<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_hifi_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_screen_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配图片：600X400"/>

    <ImageView
        android:id="@+id/iv_vi_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:src="@drawable/banner1"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_vi_text_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配字体14px"/>

    <TextView
        android:id="@+id/tv_vi_text_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配字体20px"/>

    <TextView
        android:id="@+id/tv_vi_text_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配字体30px"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_vi_dimens_200px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_vi_dimens_400px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_vi_dimens_200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
