            android:layout_height="wrap_content"
            android:background="@color/app_color_bg_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/app_page_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="列表：大头像+主题+描述\n高度88dp，头像72dp，标题黑色18dp，描述深灰14dp"
                android:textSize="12sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/app_card_corner_radius"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_list_item_height3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/app_item_padding_horizontal"
                    android:paddingStart="@dimen/app_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/app_list_item_big_header_width"
                        android:layout_height="@dimen/app_list_item_big_header_width"
                        android:src="@mipmap/ic_login" />

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/app_divider_item_space_size"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="小倩"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_18dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="心有猛虎，细嗅蔷薇"
                            android:textColor="@color/app_color_text_gray"
                            android:textSize="@dimen/app_text_size_14dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="3" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_divider_page_space_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="列表：小头像+标题\n高度64dp，头像48dp，标题黑色18dp"
                android:textSize="12sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:cardCornerRadius="@dimen/app_card_corner_radius"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_small_header_width"
                            android:layout_height="@dimen/app_list_item_small_header_width"
                            android:src="@mipmap/ic_login" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="小倩"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_18dp" />

                    </LinearLayout>

                    <View
