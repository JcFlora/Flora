                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="健康统计"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_shop" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的购物"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_jp" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="精品推荐"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_divider_page_space_size" />

            <android.support.v7.widget.CardView
