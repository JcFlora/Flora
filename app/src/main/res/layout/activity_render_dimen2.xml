                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_rj" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="心情日记"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/app_color_text_hint"
                            android:textSize="@dimen/app_text_size_14dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_zd" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的账单"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收入0.0元"
                            android:textColor="@color/app_color_text_hint"
                            android:textSize="@dimen/app_text_size_14dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_tx" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="活动提醒"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_divider_page_space_size" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:cardCornerRadius="@dimen/app_card_corner_radius"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_xz" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="星座运势"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巨蟹座:不佳"
                            android:textColor="@color/app_color_text_hint"
                            android:textSize="@dimen/app_text_size_14dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_list_item_height1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/app_item_padding_horizontal"
                        android:paddingStart="@dimen/app_item_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/app_list_item_icon_width"
                            android:layout_height="@dimen/app_list_item_icon_width"
                            android:src="@mipmap/ic_render_tq" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="今日天气"
                            android:textColor="@color/app_color_text_black"
                            android:textSize="@dimen/app_text_size_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="南京:中雨"
                            android:textColor="@color/app_color_text_hint"
                            android:textSize="@dimen/app_text_size_14dp" />

                        <android.support.v4.widget.Space
                            android:layout_width="@dimen/app_divider_item_space_size"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="@dimen/app_list_item_arrow_width"
                            android:layout_height="@dimen/app_list_item_arrow_width"
                            android:src="@mipmap/ic_render_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_divider_line_size"
                        android:layout_marginStart="48dp"
                        android:background="@color/app_color_divider_item" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_line_size"
        android:background="@color/app_color_divider_content" />

    <LinearLayout
        android:id="@+id/layout_captain_indicators"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bottom_bar_height"
        android:background="@color/app_color_bg_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_tab_home"
            android:layout_width="0dp"
