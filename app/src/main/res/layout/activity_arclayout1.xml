<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击修改弧形布局位置"/>

    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@+id/arc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_change_layout"
        app:arc_axisRadius="192dp"
        app:arc_color="@android:color/transparent"
        app:arc_origin="left"
        app:arc_radius="256dp">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/light_blue_oval_selector"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/light_blue_oval_selector"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/light_blue_oval_selector"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/light_blue_oval_selector"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/light_blue_oval_selector"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>

    </com.ogaclejapan.arclayout.ArcLayout>

</RelativeLayout>