<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/app_page_padding">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_accent_button_height"
        android:gravity="center"
        android:text="文字颜色高亮(xml实现)"
        android:textColor="@drawable/shape_color_selector"
        android:textSize="@dimen/app_text_size_18dp"
        android:clickable="true"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_page_space_size" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_color_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_accent_button_height"
        android:gravity="center"
        android:text="文字颜色高亮(代码实现)"
        android:textSize="@dimen/app_text_size_18dp"
        android:clickable="true"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_page_space_size" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_accent_button_height"
        android:background="@drawable/shape_bg_selector"
        android:text="圆角渐变高亮反馈(xml实现)"
        android:textColor="@color/app_color_text_white"
        android:textSize="@dimen/app_text_size_18dp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_page_space_size" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_accent_button_height"
        android:text="圆角渐变高亮反馈(代码实现)"
        android:textColor="@color/app_color_text_white"
        android:textSize="@dimen/app_text_size_18dp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_page_space_size" />

</LinearLayout>