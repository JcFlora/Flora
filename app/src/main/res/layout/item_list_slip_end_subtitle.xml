<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_list_item_height1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/app_item_padding_horizontal"
    android:paddingStart="@dimen/app_item_padding_horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/app_list_item_icon_width"
        android:layout_height="@dimen/app_list_item_icon_width" />

    <Space
        android:layout_width="@dimen/app_divider_item_space_size"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/app_color_text_black"
        android:textSize="@dimen/app_text_size_16dp" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_color_text_hint"
        android:textSize="@dimen/app_text_size_14dp" />

    <Space
        android:layout_width="@dimen/app_divider_item_space_size"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="@dimen/app_list_item_arrow_width"
        android:layout_height="@dimen/app_list_item_arrow_width"
        android:src="@mipmap/ic_render_arrow" />

</LinearLayout>