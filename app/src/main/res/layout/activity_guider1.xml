<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFE">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_guider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btn_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/guider_pass" />

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_guider_indicators"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/guider_start"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/layout_guider_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_indicator0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_star_light" />

        <Space
            android:layout_width="20px"
            android:layout_height="1px" />

        <ImageView
            android:id="@+id/iv_indicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_star_default" />

        <Space
            android:layout_width="20px"
            android:layout_height="1px" />

        <ImageView
            android:id="@+id/iv_indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_star_default" />

        <Space
            android:layout_width="20px"
            android:layout_height="1px" />

        <ImageView
            android:id="@+id/iv_indicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_star_default" />

        <Space
            android:layout_width="20px"
            android:layout_height="1px" />

        <ImageView
            android:id="@+id/iv_indicator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guider_star_default" />

    </LinearLayout>

</RelativeLayout>
