<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_page_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现圆角图片"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:id="@+id/iv_pack_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现圆角图片(带覆盖式边框)"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:id="@+id/iv_pack_image2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现椭圆图片"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map2" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现椭圆图片(带覆盖式边框)"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:id="@+id/iv_pack_image3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map2" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现圆形图片"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用自定义View实现圆形图片(带覆盖式边框)"
            android:textSize="18sp" />

        <com.jc.flora.apps.ui.shape.widget.ClipImageView
            android:id="@+id/iv_pack_image4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription=""
            android:src="@drawable/shape_pack_map" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_divider_page_space_size" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>