<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 实心 -->
    <solid android:color="#ff9d77" />
    <!-- 渐变 -->
    <gradient
        android:angle="270"
        android:endColor="#ddddff"
        android:startColor="#0077aa" />
    <!-- 描边 -->
    <stroke
        android:width="2dp"
        android:color="#aa44cc" />
    <!-- 圆角 -->
    <corners android:radius="8dp" />
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>
